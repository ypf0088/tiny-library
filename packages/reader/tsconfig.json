{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    // "outFile": "build.js",
    "target": "ES5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "jsx": "preserve",
    "declaration": true,
    "lib": ["esnext", "dom"],
    "rootDir": ".",
  },
}
